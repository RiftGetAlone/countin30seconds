<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonBackGroundDarkGrey"
                android:endColor="@color/buttonBackGroundDarkGrey"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonStrokeGrey" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonBackGroundGrey"
                android:endColor="@color/buttonBackGroundGrey"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonStrokeBlue" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/buttonBackGroundGrey"
                android:endColor="@color/buttonBackGroundGrey"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonStrokeGrey" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>